{
  "name": "tdnet-ai-reporter",
  "version": "1.0.0",
  "private": true,
  "description": "サーバーレス決算短信AI速報システム - Cloudflare Workers + D1 + Pages",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "db:create": "wrangler d1 create tdnet-reports",
    "db:migrate": "wrangler d1 execute tdnet-reports --file=./schema.sql --remote",
    "db:migrate:local": "wrangler d1 execute tdnet-reports --file=./schema.sql --local"
  },
  "dependencies": {
    "hono": "^4.6.0",
    "cheerio": "^1.0.0",
    "@google/generative-ai": "^0.21.0"
  },
  "devDependencies": {
    "wrangler": "^3.99.0",
    "typescript": "^5.7.0",
    "@cloudflare/workers-types": "^4.20241205.0"
  }
}
